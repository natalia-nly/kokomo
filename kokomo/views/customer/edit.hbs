{{#if user}}
<div class="home-bg" style="
    background-image: url(/images/water.jpg);
    background-size: 60vw;
    background-position: left center;
    background-repeat: no-repeat">

    <div class="container-left">

        <h2 class="display-cream"><i class="fas fa-umbrella-beach fa-sm cream"></i><br> ¡Aloha, <br>{{user.username}}!
        </h2>
    </div>

    <div class="white-card">
        <div class="mb-4">
            <a href="/profile" class="btn btn-secondary mr-3"><i class="fas fa-arrow-left"></i> Volver a mi perfil</a>
            <a href="/profile/delete" class="btn btn-secondary"><i class="fas fa-user-alt-slash"></i> Eliminar mi
                cuenta</a>
        </div>

        <h3 class="section-title"><i class="far fa-edit"></i> Edita tus datos</h3>
                    {{!-- info message will be added here --}}
            {{#if infoMessage}}
            <p class="info">{{infoMessage}}</p>
            {{/if}}

        <form action="/profile/editTelephone" method="POST">
            <input type="hidden" name="id" value="{{user._id}}">
             <div class="form-group">
                <label for="telephone">Nuevo Teléfono</label>
                <input type="telephone" name="newTelephone" id="input-telephone" placeholder="Nuevo número de teléfono"
                    class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Cambiar teléfono</button>

            {{!-- error message will be added here --}}
            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}
        </form>

        <form action="/profile/editPassword" method="POST">
            <input type="hidden" name="id" value="{{user._id}}">
            <div class="form-group">
                <label for="password">Contraseña actual</label>
                <input type="password" name="oldPassword" id="input-password" placeholder="********"
                    class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Nueva contraseña</label>
                <input type="password" name="newPassword" id="input-password" placeholder="********"
                    class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Cambiar contraseña</button>

            {{!-- error message will be added here --}}
            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}


        </form>

    </div>
</div>

{{else}}
<p>Please, login first!</p>
<a href="/login" class="btn btn-primary">Login</a>
{{/if}}