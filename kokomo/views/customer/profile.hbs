{{#if user}}
<div class="home-bg" style="
    background-image: url(/images/water.jpg);
    background-size: 60vw;
    background-position: left center;
    background-repeat: no-repeat">

    <div class="container-left">

        <h2 class="display-cream"><i class="fas fa-umbrella-beach fa-sm cream"></i><br> ¡Aloha, <br>{{user.username}}!</h2>
    </div>

    <div class="white-card">

        <h3 class="section-title"><i class="far fa-calendar-alt fa-sm blue"></i> Tus Reservas</h3>

        {{#if user.bookings}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Código de Reserva</th>
                    <th scope="col">¿Día?</th>
                    <th scope="col">¿Hora?</th>
                    <th scope="col">¿Dónde?</th>
                    <th scope="col">¿Cuántos somos?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each user.bookings}}
                <tr>
                    <td>{{booking_ref}}</td>
                    <td>{{day}}</td>
                    <td>{{time}}</td>
                    <td>{{property}}</td>
                    <td>{{guests}}</td>
                    <td>
                        <a href="/local/{{_id}}"><i class="far fa-eye ml-4"></i></a>
                        <a href="/local/{{_id}}/edit"><i class="far fa-edit ml-4"></i></a>
                        <a href="/local/{{_id}}/delete"><i class="far fa-trash-alt ml-4"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>Todavía no tienes reservas</p>
        {{/if}}

        <h3 class="section-title mt-4"><i class="fas fa-heart fa-sm blue"></i> Tus favoritos</h3>
        <p>Todavía no tienes favoritos</p>
    </div>
</div>

{{else}}
<p>Please, login first!</p>
<a href="/login" class="btn btn-primary">Login</a>
{{/if}}