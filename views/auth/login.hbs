<div class="row align-middle p-4" style="min-height: 100vh;">
    <div class="col-sm-12 col-md-4"></div>
    <div class="col-sm-12 col-md-4 align-self-center">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="input-email" class="label active">Email</label>
                <input type="email" id="input-email" name="email" placeholder="Your email" />
            </div>
            <div class="form-group">
                <label for="input-password" class="label active">Password</label>
                <input type="password" name="password" id="input-password" placeholder="********" />
            </div>

            <button type="submit" class="btn-kokomo btn-kokomo-success btn-block p-3">Login</button>

            {{!-- error message will be added here --}}
            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}
        </form>
    </div>
    <div class="col-sm-12 col-md-4"></div>
</div>
