<div class="row align-middle p-4" style="min-height: 100vh;">
    <div class="col-sm-12 col-md-4"></div>
    <div class="col-sm-12 col-md-4 align-self-center">
        <form action="/signup-local" method="POST">
            <div class="form-group">
                <label for="input-username" class="label active">Username</label>
                <input type="text" id="input-username" name="username" placeholder="Tu nombre de usuario" />
            </div>
            <div class="form-group">
                <label for="input-number" class="label active">N. teléfono</label>
                <input type="number" id="input-number" name="telephone" placeholder="Tu número de teléfono" />
            </div>
            <div class="form-group">
                <label for="input-email" class="label active">Email</label>
                <input type="email" id="input-email" name="email" placeholder="Tu email" />
            </div>
            <div class="form-group">
                <label for="input-password" class="label active">Password</label>
                <input type="password" name="password" id="input-password" placeholder="********" />
            </div>


            <button type="submit" class="btn-kokomo btn-kokomo-success btn-block p-3">Crear cuenta</button>

            {{!-- error message will be added here --}}
            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}
        </form>
        <a href="/auth/google" class="btn-kokomo btn-kokomo-grey btn-block p-3">Login con Google</a>
    </div>
    <div class="col-sm-12 col-md-4"></div>
</div>