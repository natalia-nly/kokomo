{{#if user}}

<div class="beach-background">
    <div class="text-right">
        <a href="/profile/edit" class="btn-kokomo btn-kokomo-grey mr-3"><i class="fas fa-user-cog"></i>
            Configuración</a>
        <a href="/logout" class="btn-kokomo btn-kokomo-danger"><i class="mdi mdi-logout-variant"></i>
            Cerrar sesión</a>
    </div>
</div>
<div class="text-center" style="
    border-radius: 30px;
    margin-top: -30px;
    background-color: white;
    padding-bottom: 30px;
">
  <img src="{{user.avatar}}" alt="Avatar" class="avatar">
  <h2>{{user.username}}</h2>
  <p>{{user.email}}</p>
  <p>{{user.telNumber}}</p>
</div>



{{else}}
<p>Please, login first!</p>
<a href="/login" class="btn btn-primary">Login</a>
{{/if}}